FROM rust:1.72.0-slim as builder

WORKDIR /usr/src/kafka-edge-rs
COPY kafka-edge-bin .
RUN cargo install --path .

FROM docker.io/bitnami/kafka:3.4

USER root

WORKDIR /

COPY --from=builder /usr/local/cargo/bin/kafka-edge-rs .

RUN apt-get update
RUN apt-get install -y \
    build-essential \
    libssl-dev \
    pkg-config \
    vim

# Copy config file
COPY ./kafka-rs-configs/kafka_edge_config-edge.toml /kafka_edge_config.toml

# Copy startup script
WORKDIR /
COPY ./docker-startup-scripts/startup-edge.sh /startup.sh
RUN chmod +x /startup.sh
