FROM rust:1.73.0-bullseye as builder

WORKDIR /usr/src/kafka-producer-rs
COPY kafka-producer-rs .
RUN cargo install --locked --path .

WORKDIR /usr/src/kafka-edge-bin
COPY kafka-edge-bin .
RUN cargo install --locked --path ./kafka-edge-rs

FROM docker.io/bitnami/kafka:3.4

# Copy binaries
COPY --from=builder /usr/local/cargo/bin/kafka-edge-rs .
COPY --from=builder /usr/local/cargo/bin/kafka-producer-rs .

USER root
RUN apt-get update && apt-get install -y \
    build-essential \
    libssl-dev \
    pkg-config \
    vim

USER 1001

# Copy data files
COPY data/china data/china

# Copy config files
COPY ./kafka-rs-configs/producer_config.toml producer_config.toml
COPY ./kafka-rs-configs/kafka_edge_config-kafka.toml kafka_edge_config.toml

# Copy startup script
COPY ./docker-startup-scripts/startup-kafka.sh startup.sh
